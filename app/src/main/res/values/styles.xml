<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyleMainScr" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_btn</item>
        <item name="android:textSize">@dimen/text_size_main24sp</item>
        <item name="cornerRadius">@dimen/radius16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding8</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextSettingsScr">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingVertical">@dimen/vert_padding20</item>
        <item name="android:paddingStart">@dimen/top_padding16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/sizetext_points16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconSettingsScr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/img_vert_padding20</item>
        <item name="android:paddingEnd">@dimen/img_end_padding12</item>
        <item name="android:tint">@color/icon_search_color</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditSearch">
        <item name="android:backgroundTint">@color/bground_edit_color</item>
        <item name="android:textColorHint">@color/text_search_color</item>
        <item name="android:drawableTint">@color/icon_search_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">@integer/material_motion_duration_medium_1</item>
        <item name="android:textSize">@dimen/sizetext_points16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="ClearBtn">
        <item name="android:backgroundTint">@color/bground_edit_color</item>
        <item name="android:tint">@color/icon_search_color</item>
    </style>

    <style name="TrackTitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sizetext_points16sp</item>
        <item name="android:textColor">@color/points_color</item>
    </style>

    <style name="SecondStrTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_band_time11sp</item>
        <item name="android:textColor">@color/text_search_color</item>
    </style>

    <style name="ImgTrackColor">
        <item name="android:tint">@color/icon_search_color</item>
    </style>

    <style name="ImgNothingFound">
        <item name="android:src">@drawable/ic_nothing_found_light</item>
    </style>

    <style name="ImgNoConnection">
        <item name="android:src">@drawable/ic_no_connection_light</item>
    </style>

    <style name="TextSearch">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/size_text_error_msg19sp</item>
    </style>

    <style name="TextMediaLibNoData">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/points_color</item>
        <item name="android:textSize">@dimen/size_text_error_msg19sp</item>
    </style>

    <style name="UpdateBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_update_btn_text14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius_update_btn54</item>
    </style>

    <style name="SwitchColor">
        <item name="thumbTint">@color/icon_search_color</item>
        <item name="trackTint">@color/bground_edit_color</item>
    </style>

    <style name="MediaNameTrackText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/track_name_size</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="MediaArtistNameText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_update_btn_text14sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="AdditionInfoMedia">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_media13</item>
        <item name="android:textColor">@color/text_search_color</item>
    </style>

    <style name="AdditionInfoMediaValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_media13</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TabLayoutMediaLib" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_update_btn_text14sp</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="BottomNavViewMain" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textSize">@dimen/botnavview_text_size12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="itemIconSize">@dimen/btn_backward24</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="itemBackground">?attr/nonMainScrBrd</item>
    </style>

    <style name="TextHintStyle">
        <item name="android:textSize">@dimen/sizetext_points16sp</item>
        <item name="android:textColorHint">@color/icon_color</item>
    </style>

    <style name="CreateBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/text_search_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sizetext_points16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/medium_padding8</item>
    </style>

    <style name="SnackbarTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_update_btn_text14sp</item>
    </style>

    <style name="PlaylistInfoStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/botnavview_text_size12</item>
        <item name="android:textColorHint">@color/icon_color</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyleMainScr" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_btn</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextSettingsScr">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingVertical">@dimen/vert_padding</item>
        <item name="android:paddingStart">@dimen/top_padding</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/sizetext_points</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="IconSettingsScr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/img_vert_padding</item>
        <item name="android:paddingEnd">@dimen/img_end_padding</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="EditSearch">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/main_color</item>
        <item name="android:drawableTint">@color/main_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">@integer/material_motion_duration_medium_1</item>
        <item name="android:textSize">@dimen/sizetext_points</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="ClearBtn">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/main_color</item>
    </style>

    <style name="TrackTitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/sizetext_points</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondStrTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/size_band_time</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImgTrackColor">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImgNothingFound">
        <item name="android:src">@drawable/ic_nothing_found_dark</item>
    </style>

    <style name="ImgNoConnection">
        <item name="android:src">@drawable/ic_no_connection_dark</item>
    </style>

    <style name="ErrorTextSearch">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_error_msg</item>
    </style>

    <style name="UpdateBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/size_update_btn_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius_update_btn</item>
    </style>

</resources>
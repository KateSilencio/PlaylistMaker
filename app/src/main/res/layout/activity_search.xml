<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/medium_padding"
        android:paddingTop="@dimen/medium_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingBottom="@dimen/medium_padding"
        app:navigationIcon="@drawable/ic_backward"
        app:title="@string/search"
        app:titleTextAppearance="@style/TitleText" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_search_id"
            style="@style/EditSearch"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/top_padding"
            android:layout_marginVertical="@dimen/medium_padding"
            android:background="@drawable/bground_shapes"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/medium_padding"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingHorizontal="@dimen/medium_padding"
            android:singleLine="true"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Пример введенного текста" />

        <ImageButton
            android:id="@+id/clear_btn_id"
            style="@style/ClearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/img_end_padding"
            android:padding="8dp"
            android:src="@drawable/ic_clear"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/nothing_find"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/ImgNothingFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/top_margin_image_search"
                android:gravity="center_horizontal" />

            <TextView
                style="@style/ErrorTextSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_padding"
                android:text="@string/msg_nothing_found" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_connection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/ImgNoConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/top_margin_image_search" />

            <TextView
                style="@style/ErrorTextSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_padding"
                android:gravity="center_horizontal"
                android:text="@string/msg_no_connection" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/update_btn"
                style="@style/UpdateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/btn_backward"
                android:padding="@dimen/update_btn_padding"
                android:text="@string/txt_btn_update" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>


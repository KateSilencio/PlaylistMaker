<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backward_search_btn"
            style="@style/BackBtn"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            style="@style/TitleText"
            android:text="@string/search" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_search_id"
            style="@style/EditSearch"
            android:background="@drawable/bground_shapes"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/search"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/clear_btn_id"
            style="@style/ClearBtn"
            android:layout_alignRight="@id/edit_text_search_id"
            android:src="@drawable/ic_clear"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>

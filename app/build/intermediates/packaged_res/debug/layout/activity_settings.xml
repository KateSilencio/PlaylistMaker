<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/btn_backward"
            android:paddingTop="@dimen/btn_backward"
            android:paddingEnd="@dimen/btn_backward"
            android:paddingBottom="@dimen/btn_backward"
            android:src="@drawable/ic_backward"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/settings_sc_screen"
            android:textColor="@color/text_btn"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/vert_padding"
            android:paddingStart="@dimen/top_padding"
            android:text="@string/theme"
            android:textColor="@color/points_color"
            android:textSize="@dimen/sizetext_points" />

        <Switch
            android:id="@+id/switch_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:paddingEnd="12dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:paddingVertical="@dimen/vert_padding"
            android:paddingStart="@dimen/top_padding"
            android:text="@string/share"
            android:textColor="@color/points_color"
            android:textSize="@dimen/sizetext_points" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/img_vert_padding"
            android:paddingEnd="@dimen/img_end_padding"
            android:src="@drawable/ic_share" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:paddingVertical="@dimen/vert_padding"
            android:paddingStart="@dimen/top_padding"
            android:text="@string/write_support"
            android:textColor="@color/points_color"
            android:textSize="@dimen/sizetext_points" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/img_vert_padding"
            android:paddingEnd="@dimen/img_end_padding"
            android:src="@drawable/ic_support" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:paddingVertical="@dimen/vert_padding"
            android:paddingStart="@dimen/top_padding"
            android:text="@string/agreement"
            android:textColor="@color/points_color"
            android:textSize="@dimen/sizetext_points" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/img_vert_padding"
            android:paddingEnd="@dimen/img_end_padding"
            android:src="@drawable/ic_agreement" />

    </LinearLayout>

</LinearLayout>
